// This is your Prisma schema file.
// Learn more about it in the docs: https://pris.ly/d/prisma-schema

// 1. Defines the database connection. We're using SQLite.
datasource db {
  provider = "sqlite"
  url      = "file:./dev.db" // Points to the database file
}

// 2. Specifies the generator for Prisma Client.
generator client {
  provider = "prisma-client-js"
}

// 3. Defines the 'Produto' (Product) model.
model Produto {
  id          Int      @id @default(autoincrement())
  nome        String
  preco       Float
  descricao   String? // Optional field
  imagem      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relation: A product can be in many cart items.
  carrinhoItems Carrinho[]
}

// 4. Defines the 'Usuario' (User) model.
model Usuario {
  id        Int      @id @default(autoincrement())
  nome      String
  email     String   @unique // Email should be unique for each user
  image     String
  role      String   @default("user")
  createdAt DateTime @default(now())
  session   DateTime @default(now()) // Timestamp of the user's session start

  // Relation: A user can have many items in their cart.
  carrinho  Carrinho[]
}

// 5. Defines the 'Carrinho' (Cart) model. This is a join table.
model Carrinho {
  id         Int      @id @default(autoincrement())
  quantidade Int      @default(1)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Foreign key for the user
  usuarioId  Int
  // Foreign key for the product
  produtoId  Int

  // Relations to the other models
  usuario    Usuario  @relation(fields: [usuarioId], references: [id], onDelete: Cascade)
  produto    Produto  @relation(fields: [produtoId], references: [id], onDelete: Cascade)

  @@unique([usuarioId, produtoId]) // Ensures a user can't have duplicate products in the cart
}